  <script>
   function my_favaourite(member_id,obj)
	{
		
		$.ajax({
			
			url:'<?= base_url('member/my_favaourite')?>',
			method:'POST',
			data:{'member_id':member_id},
			type:'json',
			success:function(data){
				//window.location.reload();
			}
			
		})
		var crnt_class = $(obj).children().attr('class');
		if(crnt_class == 'fa fa-heart')
		{
			$(obj).children().attr('class','fa fa-heart fa fa-heart-o');
		}
		else{
			$(obj).children().attr('class','fa fa-heart');
		}
	}
 $(function(){
	 
  

